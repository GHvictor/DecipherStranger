<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/setting_title"
            android:background="@drawable/shape_dialog_title_bg"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:text="@string/Setting_Text"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:visibility="visible"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_dialog_body_bg">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游 戏 音 效"
                        android:textSize="22dp"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:id="@+id/textView1"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gameEffectSwitch"
                        android:background="@color/blue"
                        android:textOff=" 关 "
                        android:textOn=" 开 "
                        android:thumb="@color/white_blue"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </LinearLayout>

            <view
                android:layout_width="fill_parent"
                android:layout_height="2px"
                class="android.support.v7.widget.LinearLayoutCompat"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="背 景 音 乐"
                        android:textSize="22dp"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        android:id="@+id/textView2"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gameBgSwitch"
                        android:background="@color/blue"
                        android:textOff=" 关 "
                        android:textOn=" 开 "
                        android:thumb="@color/white_blue"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </LinearLayout>

            <view
                android:layout_width="fill_parent"
                android:layout_height="2px"
                class="android.support.v7.widget.LinearLayoutCompat"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_line" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="@string/confirm"
                android:id="@+id/confirm"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:background="@drawable/dialog_confirm_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>