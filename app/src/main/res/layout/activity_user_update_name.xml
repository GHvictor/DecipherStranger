<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_blue"
        android:orientation="vertical" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/updateName_back_button"
            android:onClick="UpdateNameOnClick"
            android:background="@drawable/shake_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/updateName"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/updateName_back_button" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/save"
            android:id="@+id/save_btn"
            android:textSize="16dp"
            android:onClick="UpdateNameOnClick"
            android:background="@drawable/tab_btn_bg"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="20"
            android:maxLines="1"
            android:id="@+id/nameText"
            android:layout_margin="10dp"
            android:background="@drawable/input_bar_bg"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameTip"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>