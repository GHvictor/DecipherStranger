<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_trends"
        android:onClick="morePageOnClick"
        android:background="@drawable/friends_trends"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_invitation"
        android:onClick="morePageOnClick"
        android:background="@drawable/friends_invitation"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_shake"
        android:onClick="morePageOnClick"
        android:background="@drawable/friends_shake"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_near"
        android:onClick="morePageOnClick"
        android:background="@drawable/friends_near"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_map"
        android:onClick="morePageOnClick"
        android:background="@drawable/friends_map"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_game"
        android:onClick="morePageOnClick"
        android:background="@drawable/friends_game"
        android:layout_gravity="center_horizontal" />
    
</LinearLayout>