<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:orientation="vertical" >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:id="@+id/shake_back_button"
            android:background="@drawable/shake_back"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/shakeSettings"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/shake_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shake_back_button"
            android:layout_toEndOf="@+id/shake_back_button" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/silvery">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_shake_setting_bg">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_button_bg_white"
                android:text="@string/defaultImage"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity ="center_vertical"
                android:paddingLeft="12dp"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal" />

            <view
                android:layout_width="fill_parent"
                android:layout_height="2px"
                class="android.support.v7.widget.LinearLayoutCompat"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_line" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity ="center_vertical"
                android:paddingLeft="12dp"
                android:background="@drawable/selector_button_bg_white"
                android:text="@string/setImage"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal" />

            <view
                android:layout_width="fill_parent"
                android:layout_height="2px"
                class="android.support.v7.widget.LinearLayoutCompat"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/switch1"
                    android:background="@color/blue"
                    android:textOff=" 关 "
                    android:textOn=" 开 "
                    android:textColor="@color/white_blue"
                    android:thumb="@color/white_blue"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/white_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/music_effect"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:id="@+id/textView3"
                    android:gravity ="center_vertical"
                    android:paddingLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <view
                android:layout_width="fill_parent"
                android:layout_height="2px"
                class="android.support.v7.widget.LinearLayoutCompat"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:id="@+id/switch2"
                    android:background="@color/blue"
                    android:textOff=" 关 "
                    android:textOn=" 开 "
                    android:textColor="@color/white_blue"
                    android:thumb="@color/white_blue"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="@color/white_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shake_effect"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:gravity ="center_vertical"
                    android:paddingLeft="12dp"
                    android:id="@+id/textView4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>